<% if current_user.present? %>
  <header class="main-header d-flex align-items-center">
    <div id="flashMessage">
      <%= render 'layouts/flash_messages' %>
    </div>
    <!-- Sidebar toggle button-->
    <div class="logo mr-auto">
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button"><span class="sr-only">Toggle
          navigation</span>
      </a>
      <span class="fw-600"><%= @current_user&.email %></span>
    </div>
    <!-- Header Navbar -->
    <nav class="navbar navbar-static-top navbar-expand-md navbar-light">
      <h5 class="navbar-top-title text-darkgray1 fw-500 text-uppercase mb-0">
      </h5>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon">
          <i class="fa fa-ellipsis-v"></i>
        </span>
      </button>
      <!-- Navbar Right Menu -->
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="nav navbar-nav ml-auto">
          <li class="nav-item dropdown">
            <a href="javascript:;" class="nav-link dropdown-toggle fw-500 d-flex align-items-center" data-toggle="dropdown">
              <div class="nav-circie d-flex align-items-center justify-content-center mr-2">
                <i class="fas fa-user"></i></div>
              <%= current_user&.email %>
            </a>
            <div class="dropdown-menu">
              <%= link_to "Log out", destroy_user_session_path, class: 'dropdown-item', method: :delete %>
            </div>
          </li>
        </ul>
      </div>
    </nav>
  </header>
<% end %>
