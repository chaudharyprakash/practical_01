<section class="content-wrapper admin-login ml-0"> 
  <div class="content">
    <div class="admin-login-inner mx-auto">
      <div class="box p-4">
        <h2 class="admin-title-small text-darkgray1 mb-3">Change your password</h2>
        <%= form_for(resource, as: resource_name, validate: true, url: password_path(resource_name), html: { method: :put, class: 'inquiry-form' }) do |f| %>
          <% flash.each do |key, value| %>
            <% if key == "alert" %>
              <div class="alert-message-top">
                <div class="alert alert-<%= key %>" id="flashMessage"> <%= value %></div>
              </div>
            <% end %>
          <% end %>
          <div class="form-group mb-0">
            <%= f.password_field :password, autofocus: true, class: 'form-control input100','data-parsley-required': 'true', 'data-parsley-required-message': "Please enter New Password", 'data-parsley-trigger': 'keyup','data-parsley-equalto' => '#user_password','data-parsley-equalto-message' => 'Password and Confirm Password does not match', 'data-parsley-minlength': "6" %>
            <%= f.label :password, "New Password" %>
            <%= f.hidden_field :reset_password_token %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, class: 'form-control input100', 'data-parsley-required': 'true', 'data-parsley-required-message': "Please enter Confirm New Password", 'data-parsley-trigger': 'keyup','data-parsley-equalto' => '#user_password','data-parsley-equalto-message' => 'Password and Confirm Password does not match', 'data-parsley-minlength': "6" %>
            <%= f.label :password_confirmation, "Confirm New Password" %>
          </div>
          <%= f.submit "Change my password", class: 'btn btn-admin fs-20 w-100 mb-4' %>
        <% end %>
      </div>
    </div>
  </div>
</section>

